server {
    listen 80;
    server_name your-domain.com; # Replace with your actual domain or IP

    root /var/www/steam-analyzer/dist; # Replace with your deployment path
    index index.html;

    # Serve the React Frontend
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy API requests to the Rust backend
    location /api/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Optional: Cache static assets for performance
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }
}
